    <uses-permission android:name="android.permission.BROADCAST_STICKY"/>

    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:name="test.com.androidtest.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!--android:largeHeap="true"-->
        <!--android:persistent="true"-->

        <activity
            android:name="test.com.androidtest.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BaseActivityTitle">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="test.com.androidtest.light.WarnActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="test.com.androidtest.light.LightActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="test.com.androidtest.light.ScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="test.com.androidtest.battery.BatteryActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"/>

        <activity
            android:name="test.com.androidtest.clock.ClockActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="test.com.androidtest.calculator.CalculatorActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"/>

        <activity
            android:name="test.com.androidtest.camera.CameraActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"/>

        <activity
            android:name="test.com.androidtest.camera.MirrorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="test.com.androidtest.light.FlashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="test.com.androidtest.about.XLCPlug"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@style/AppTheme"/>

    </application>

